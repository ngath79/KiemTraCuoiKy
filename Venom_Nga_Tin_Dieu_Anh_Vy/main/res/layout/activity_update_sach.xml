<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientbackground">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý thông tin thành viên"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="145dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_thuvien" />

                <EditText
                    android:id="@+id/txtMatv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_matv"
                    android:drawablePadding="20dp"
                    android:ems="25"
                    android:hint="Mã thành viên"
                    android:importantForAutofill="no"
                    android:textSize="15dp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_people_24"
                    android:drawablePadding="20dp"
                    android:ems="25"
                    android:hint="Họ và tên"
                    android:importantForAutofill="no"
                    android:textSize="15dp"
                    android:textStyle="italic" />
                <EditText
                    android:id="@+id/txtTacGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_cake_24"
                    android:drawablePadding="20dp"
                    android:ems="25"
                    android:hint="Năm sinh"
                    android:importantForAutofill="no"
                    android:textSize="15dp"
                    android:textStyle="italic" />
                <EditText
                    android:id="@+id/txtNamsinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_cake_24"
                    android:drawablePadding="20dp"
                    android:ems="25"
                    android:hint="Năm sinh"
                    android:importantForAutofill="no"
                    android:textSize="15dp"
                    android:textStyle="italic" />
                <EditText
                    android:id="@+id/txtImg"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/ic_baseline_cake_24"
                    android:drawablePadding="20dp"
                    android:ems="25"
                    android:hint="ImageUrl"
                    android:importantForAutofill="no"
                    android:textSize="15dp"
                    android:textStyle="italic" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sửa"
                        android:id="@+id/button_updatemember"/>
                    <Button
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_cancel"
                        android:text="Hủy"/>
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>