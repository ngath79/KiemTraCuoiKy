<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20sp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_maPM"
                android:hint="Mã phiếu mượn"
                android:padding="12dp"
                android:gravity="top"
                android:lines="1"
                android:background="@android:drawable/editbox_background"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_Tensach"
                android:hint="Tên sách"
                android:padding="12dp"
                android:gravity="top"
                android:lines="1"
                android:background="@android:drawable/editbox_background"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_ngaymuon"
                android:hint="Ngày mượn"
                android:padding="12dp"
                android:gravity="top"
                android:lines="1"
                android:background="@android:drawable/editbox_background"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_text_ngaytra"
                android:hint="Ngày trả"
                android:padding="12dp"
                android:gravity="top"
                android:lines="1"
                android:background="@android:drawable/editbox_background"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_them"
                    android:background="@drawable/btn_phieumuon"
                    android:text="Submit"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_trove"
                    android:background="@drawable/btn_phieumuon"
                    android:text="Back"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_huy"
                    android:background="@drawable/btn_phieumuon"
                    android:text="Cancel"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>